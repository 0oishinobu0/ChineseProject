@model List<Models.EntityFramework.HocVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Học viên</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin học viên</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã học viên</th>
                        <th>Họ tên</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Cơ sở</th>
                        <th data-orderable="false">Thuộc lớp</th>
                        <th data-orderable="false">Thao tác</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Mã học viên</th>
                        <th>Họ tên</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Cơ sở</th>
                        <th>Thuộc lớp</th>
                        <th>Thao tác</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaHV</td>
                            <td>@item.TenHV</td>
                            <td>@item.SoDienThoaiHV</td>
                            <td>@item.EmailHV</td>
                            <td>@item.CoSoHV</td>
                            <td>
                                <a class="text-primary" href="@Url.Action("BelongTo", new { id = item.MaHV })">
                                    Chi tiết
                                </a>
                            </td>
                            <td>
                                <a class="text-primary" href="@Url.Action("ViewArrange", new { id = item.MaHV })">
                                    Xếp lớp
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
